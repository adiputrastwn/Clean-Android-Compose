# Gemfile - Ruby dependencies for Fastlane
# This file ensures all team members use the same Fastlane version
# Run `bundle install` to install dependencies
# Run `bundle update` to update dependencies

source "https://rubygems.org"

# Fastlane - Automation tool for iOS and Android
# Version pinned to ensure consistency across environments
gem "fastlane", "~> 2.219.0"

